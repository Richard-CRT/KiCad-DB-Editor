<Window x:Class="KiCad_DB_Editor.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KiCad_DB_Editor.View"
        xmlns:vm="clr-namespace:KiCad_DB_Editor.ViewModel"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="900" Width="1600" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.DataContext>
        <vm:MainWindowVM />
    </Window.DataContext>
    <Window.InputBindings>
        <KeyBinding Modifiers="Control" Key="N" Command="{Binding NewLibraryCommand, Mode=OneWay}" />
        <KeyBinding Modifiers="Control" Key="O" Command="{Binding OpenLibraryCommand, Mode=OneWay}" />
        <KeyBinding Modifiers="Control" Key="S" Command="{Binding SaveLibraryCommand, Mode=OneWay}" />
        <KeyBinding Key="F1" Command="{Binding HelpLibraryCommand, Mode=OneWay}" />
    </Window.InputBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New Library" Command="{Binding NewLibraryCommand, Mode=OneWay}" InputGestureText="Ctrl+N" />
                <MenuItem Header="_Open Library..." Command="{Binding OpenLibraryCommand, Mode=OneWay}" InputGestureText="Ctrl+O" />
                <Separator />
                <MenuItem Header="_Save Library" Command="{Binding SaveLibraryCommand, Mode=OneWay}" InputGestureText="Ctrl+S" />
                <MenuItem Header="Save Library _As..." Command="{Binding SaveAsLibraryCommand, Mode=OneWay}" />
                <Separator />
                <MenuItem Header="_Exit" Command="{Binding ExitLibraryCommand, Mode=OneWay}" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_KiCad DB Documentation" Command="{Binding HelpLibraryCommand, Mode=OneWay}" InputGestureText="F1" />
            </MenuItem>
            <MenuItem Header="_About">
                <MenuItem Header="Created by Richard-CRT" />
                <MenuItem Header="{Binding AppVersion}" />
            </MenuItem>
        </Menu>
        <local:UserControl_Library DockPanel.Dock="Top" LibraryVM="{Binding LibraryVM}" Margin="5,5,5,5" />
    </DockPanel>
</Window>
